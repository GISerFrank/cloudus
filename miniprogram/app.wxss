page {
  background-color: #f7f8fa;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
  color: #333;
  font-size: 28rpx;
}

.container {
  padding: 30rpx;
}

/* 通用卡片样式 */
.card-view {
  background-color: #fff;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 30rpx;
  overflow: hidden;
}

/* 主色调按钮 */
.main-button {
  background-color: #4a90e2;
  color: #fff;
  border-radius: 40rpx;
  font-size: 32rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
}

.main-button::after {
  border: none;
}