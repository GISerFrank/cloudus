.container { padding: 40rpx 30rpx; }
.header { text-align: center; margin-bottom: 60rpx; }
.title { font-size: 48rpx; font-weight: bold; }
.subtitle { font-size: 28rpx; color: #999; margin-top: 10rpx; }
.achievement-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 30rpx;
}
.achievement-item {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 30rpx 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}
.badge-icon { width: 100rpx; height: 100rpx; margin-bottom: 20rpx; }
.badge-name { font-size: 28rpx; font-weight: bold; }
.badge-desc { font-size: 22rpx; color: #999; margin-top: 5rpx; }
.achievement-item.locked {
  opacity: 0.5;
}
.achievement-item.locked .badge-icon {
  filter: grayscale(100%);
}