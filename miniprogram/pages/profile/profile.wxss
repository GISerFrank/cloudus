.profile-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 0;
}

.avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  border: 4rpx solid #fff;
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.1);
}

.nickname {
  font-size: 36rpx;
  font-weight: bold;
  margin-top: 20rpx;
}

.login-btn {
  margin-top: 20rpx;
  background-color: #4a90e2;
  color: #fff;
  border-radius: 40rpx;
  font-size: 28rpx;
  padding: 0 40rpx;
  height: 70rpx;
  line-height: 70rpx;
}

.stats-bar {
  display: flex;
  justify-content: space-around;
  padding: 30rpx 0;
}

.stats-item {
  text-align: center;
}

.stats-value {
  font-size: 36rpx;
  font-weight: bold;
}

.stats-label {
  font-size: 24rpx;
  color: #999;
  margin-top: 5rpx;
}

.menu-list {
  padding: 10rpx 30rpx;
}

.menu-item {
  display: flex;
  align-items: center;
  height: 100rpx;
  font-size: 30rpx;
  border-bottom: 1rpx solid #f7f8fa;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.arrow {
  color: #ccc;
  margin-left: auto;
}

.works-title {
  font-size: 36rpx;
  font-weight: bold;
  padding: 40rpx 0 20rpx;
}

.works-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 15rpx;
}

.grid-item {
  width: 100%;
  height: 220rpx;
  border-radius: 12rpx;
  background-color: #eee;
}