<view class="container">
  <!-- 用户信息 -->
  <view class="profile-header">
    <image class="avatar" src="{{userInfo.avatarUrl || 'https://placehold.co/200x200/d8e2dc/ffffff?text=Avatar'}}"></image>
    <view wx:if="{{hasUserInfo}}" class="nickname">{{userInfo.nickName}}</view>
    <button wx:else class="login-btn" bindtap="getUserProfile">点击登录</button>
  </view>
  
  <!-- 数据统计 -->
  <view class="stats-bar card-view">
    <view class="stats-item">
      <view class="stats-value">128</view>
      <view class="stats-label">作品</view>
    </view>
    <view class="stats-item">
      <view class="stats-value">12.8k</view>
      <view class="stats-label">获赞</view>
    </view>
    <view class="stats-item">
      <view class="stats-value">512</view>
      <view class="stats-label">收藏</view>
    </view>
  </view>

  <!-- 功能列表 -->
  <view class="menu-list card-view">
    <view class="menu-item">
      <image src="/images/icon_badge.png" class="menu-icon"></image>
      <text>我的成就</text>
      <text class="arrow">></text>
    </view>
    <view class="menu-item">
      <image src="/images/icon_favorite.png" class="menu-icon"></image>
      <text>我的收藏</text>
      <text class="arrow">></text>
    </view>
    <view class="menu-item">
       <image src="/images/icon_settings.png" class="menu-icon"></image>
      <text>设置</text>
      <text class="arrow">></text>
    </view>
  </view>

  <!-- 我的作品 -->
  <view class="works-title">我的作品</view>
  <view class="works-grid">
    <image class="grid-item" wx:for="{{myWorks}}" wx:key="id" src="{{item.imageUrl}}" mode="aspectFill" bindtap="goToDetail" data-id="{{item.id}}"></image>
  </view>
</view>