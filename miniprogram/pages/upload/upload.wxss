.container {
  padding-bottom: 120rpx;
}
.upload-area {
  width: 100%;
  height: 400rpx;
  background-color: #fff;
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-bottom: 30rpx;
  overflow: hidden;
}

.placeholder-icon {
  width: 100rpx;
  height: 100rpx;
  opacity: 0.5;
}

.placeholder-text {
  margin-top: 20rpx;
  color: #999;
}

.preview-image {
  width: 100%;
  height: 100%;
}

.form-section {
  padding: 30rpx;
}

.title-input {
  font-size: 32rpx;
  font-weight: bold;
  height: 80rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.desc-input {
  width: 100%;
  height: 150rpx;
  padding-top: 20rpx;
  font-size: 28rpx;
}

.form-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.form-label {
  font-size: 30rpx;
  font-weight: 500;
}

.form-content {
  color: #999;
}

.cloud-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  padding-top: 20rpx;
}

.tag {
  background-color: #f7f8fa;
  padding: 10rpx 25rpx;
  border-radius: 30rpx;
  font-size: 26rpx;
  color: #666;
}

.tag.active {
  background-color: #4a90e2;
  color: #fff;
}

.submit-btn {
  position: fixed;
  bottom: 20rpx;
  left: 30rpx;
  right: 30rpx;
  width: auto;
}