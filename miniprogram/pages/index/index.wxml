<view class="container">
  <!-- 顶部导航和筛选 -->
  <view class="top-nav">
    <view class="nav-item {{activeTab === 'recommend' ? 'active' : ''}}" data-tab="recommend" bindtap="switchTab">推荐</view>
    <view class="nav-item {{activeTab === 'latest' ? 'active' : ''}}" data-tab="latest" bindtap="switchTab">最新</view>
    <view class="nav-item {{activeTab === 'nearby' ? 'active' : ''}}" data-tab="nearby" bindtap="switchTab">附近</view>
  </view>

  <!-- 云图瀑布流 -->
  <view class="waterfall-container">
    <view class="column">
      <view class="card" wx:for="{{leftList}}" wx:key="id" bindtap="goToDetail" data-id="{{item.id}}">
        <image src="{{item.imageUrl}}" mode="widthFix" class="card-image" lazy-load="true"></image>
        <view class="card-title">{{item.title}}</view>
        <view class="card-footer">
          <view class="user-info">
            <image src="{{item.avatar}}" class="avatar"></image>
            <text class="username">{{item.username}}</text>
          </view>
          <view class="likes">
            <image src="/images/icon_like.png" class="like-icon"></image>
            <text>{{item.likes}}</text>
          </view>
        </view>
      </view>
    </view>
    <view class="column">
      <view class="card" wx:for="{{rightList}}" wx:key="id" bindtap="goToDetail" data-id="{{item.id}}">
        <image src="{{item.imageUrl}}" mode="widthFix" class="card-image" lazy-load="true"></image>
        <view class="card-title">{{item.title}}</view>
        <view class="card-footer">
          <view class="user-info">
            <image src="{{item.avatar}}" class="avatar"></image>
            <text class="username">{{item.username}}</text>
          </view>
          <view class="likes">
            <image src="/images/icon_like.png" class="like-icon"></image>
            <text>{{item.likes}}</text>
          </view>
        </view>
      </view>
    </view>
  </view>
  
  <!-- 上传按钮 -->
  <view class="upload-btn" bindtap="navigateToUpload">
    <image src="/images/icon_upload.png" class="upload-icon"></image>
  </view>
</view>