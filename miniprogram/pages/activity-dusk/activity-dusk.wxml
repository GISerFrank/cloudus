<view class="container">
  <!-- 顶部头部信息 -->
  <view class="header">
    <image class="header-bg" src="https://placehold.co/800x450/ffb5a7/ffdac1?text=Dusk" mode="aspectFill"></image>
    <view class="header-content">
      <view class="title">晨昏美术馆</view>
      <view class="subtitle">捕捉一天中最绚烂的时刻</view>
      <view class="time-card">
        <view class="time-item">
          <text class="time-label">今日日出</text>
          <text class="time-value">05:31</text>
        </view>
        <view class="time-divider"></view>
        <view class="time-item">
          <text class="time-label">今日日落</text>
          <text class="time-value">18:45</text>
        </view>
      </view>
    </view>
  </view>
  
  <!-- 霞光指数和闹钟 -->
  <view class="feature-bar card-view">
    <view class="feature-item">
      <view class="feature-title">今日霞光绚丽指数</view>
      <view class="feature-value aqi-good">85分 · 宜观赏</view>
    </view>
    <view class="feature-action" bindtap="showAlarmClock">
      <image src="/images/icon_alarm.png" class="alarm-icon"></image>
      <text>追光闹钟</text>
  </view>
  </view>

  <!-- 霞光作品列表 -->
  <view class="gallery-list">
    <view class="list-title">实时霞光墙</view>
    <view class="gallery-item card-view" wx:for="{{galleryList}}" wx:key="id" bindtap="goToDetail" data-id="{{item.id}}">
      <image class="gallery-image" src="{{item.imageUrl}}" mode="aspectFill" lazy-load="true"></image>
      <view class="gallery-info">
        <view class="gallery-text">
          <view class="gallery-title">{{item.title}}</view>
          <view class="gallery-desc">@{{item.username}} · {{item.location}}</view>
        </view>
        <view class="gallery-likes">
          <image src="/images/icon_like_white.png" class="like-icon"></image>
          <text>{{item.likes}}</text>
        </view>
      </view>
    </view>
  </view>
</view>